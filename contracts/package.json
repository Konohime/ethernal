{
  "name": "ethernal-contracts",
  "version": "2.0.0",
  "description": "Ethernal - Multiplayer dungeon on Base",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ledger": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.5",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "hardhat": "^2.22.2",
    "hardhat-deploy": "^0.12.2",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.2",
    "solidity-coverage": "^0.8.11",
    "typechain": "^8.3.2"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "deploy:local": "hardhat deploy --network localhost --export ../webapp/contracts/development.json",
    "deploy:base-sepolia": "hardhat deploy --network baseSepolia --export ../webapp/contracts/staging.json",
    "deploy:base": "hardhat deploy --network base --export ../webapp/contracts/production.json",
    "node": "hardhat node",
    "dev": "hardhat node --export ../webapp/contracts/development.json",
    "format": "prettier --write 'src/**/*.sol' 'test/**/*.js' 'scripts/**/*.js' 'deploy/**/*.js'",
    "format:check": "prettier --check 'src/**/*.sol'",
    "lint": "solhint 'src/**/*.sol'",
    "clean": "hardhat clean",
    "verify": "hardhat verify"
  },
  "dependencies": {
    "qrcode": "^1.5.4"
  }
}
